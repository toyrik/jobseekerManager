{% extends 'base.html.twig' %}

{% block title %} Vacancies {% endblock %}

{% block breadcrumbs %}
    <ol class="breadcrumb float-sm-left">
        <li class="breadcrumb-item"><a href="{{ path('home') }}">Home</a></li>
        <li class="breadcrumb-item active">Vacancies</li>
    </ol>
{% endblock %}

{% block body %}
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Vacancies</h3>
            <div class="card-tools">
                <ul class="nav nav-pills">
                    <li class="nav-item"><a class="btn btn-primary" href="{{ path('vacancies.create') }}">Create</a></li>
                </ul>
            </div>
        </div>
        <!-- /.card-header -->

        <div class="card-body p-0">
            <table class="table table-striped">
                <thead>
                <tr>
                    <th>
                        Title
                    </th>
                    <th>
                        Status
                    </th>
                </tr>
                </thead>
                <tbody>
                {% for vacancy in pagination %}
                    <tr>
                        <td><a href="{{ path('vacancies.show', {'id': vacancy.id }) }}">{{ vacancy.title }}</a></td>
                        <td>{{ vacancy_status(vacancy.status) }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        <!-- /.card-body -->
    </div>
    <div class="navigation">
        {{ knp_pagination_render(pagination) }}
    </div>
{% endblock %}
